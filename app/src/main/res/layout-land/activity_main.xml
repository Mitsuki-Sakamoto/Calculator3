<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/num7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/num_7"
        android:scaleType="fitXY"
        android:src="@drawable/num7"
        app:layout_constraintBottom_toTopOf="@+id/num4"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/num8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="1" />

    <ImageButton
        android:id="@+id/num8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/num_8"
        android:scaleType="fitXY"
        android:src="@drawable/num8"
        app:layout_constraintBottom_toTopOf="@+id/num5"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/num7"
        app:layout_constraintRight_toLeftOf="@+id/num9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="1" />

    <ImageButton
        android:id="@+id/num9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/num_9"
        android:scaleType="fitXY"
        android:src="@drawable/num9"
        app:layout_constraintBottom_toTopOf="@+id/num6"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/num8"
        app:layout_constraintRight_toLeftOf="@+id/clear"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:id="@+id/clear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/c"
        android:textSize="@dimen/land_button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/mult"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/num9"
        app:layout_constraintRight_toLeftOf="@+id/clearEntry"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:id="@+id/clearEntry"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/ce"
        android:textSize="@dimen/land_button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/div"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/clear"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="1" />


    <ImageButton
        android:id="@+id/num4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/num_4"
        android:scaleType="fitXY"
        android:src="@drawable/num4"
        app:layout_constraintBottom_toTopOf="@+id/num1"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/num5"
        app:layout_constraintTop_toBottomOf="@+id/num7"
        app:layout_constraintVertical_weight="1" />

    <ImageButton
        android:id="@+id/num5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/num_5"
        android:scaleType="fitXY"
        android:src="@drawable/num5"
        app:layout_constraintBottom_toTopOf="@+id/num2"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/num4"
        app:layout_constraintRight_toLeftOf="@+id/num6"
        app:layout_constraintTop_toBottomOf="@+id/num8"
        app:layout_constraintVertical_weight="1" />

    <ImageButton
        android:id="@+id/num6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/num_6"
        android:scaleType="fitXY"
        android:src="@drawable/num6"
        app:layout_constraintBottom_toTopOf="@+id/num3"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/num5"
        app:layout_constraintRight_toLeftOf="@+id/mult"
        app:layout_constraintTop_toBottomOf="@+id/num9"
        app:layout_constraintVertical_weight="1" />

    <ImageButton
        android:id="@+id/add"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/add"
        android:scaleType="fitXY"

        android:src="@drawable/add"
        app:layout_constraintBottom_toTopOf="@+id/sub"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/num3"
        app:layout_constraintRight_toLeftOf="@id/equal"
        app:layout_constraintTop_toBottomOf="@+id/mult"
        app:layout_constraintVertical_weight="1" />

    <ImageButton
        android:id="@+id/div"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/div"

        android:scaleType="fitXY"
        android:src="@drawable/div"
        app:layout_constraintBottom_toTopOf="@+id/equal"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/mult"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clearEntry"
        app:layout_constraintVertical_weight="1" />

    <ImageButton
        android:id="@+id/dot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/dot"
        android:scaleType="fitXY"
        android:src="@drawable/dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/num0"
        app:layout_constraintRight_toLeftOf="@+id/sub"
        app:layout_constraintTop_toBottomOf="@+id/num3"
        app:layout_constraintVertical_weight="1" />

    <ImageButton
        android:id="@+id/equal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/equ"
        android:scaleType="fitXY"
        android:src="@drawable/equal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/add"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/div"
        app:layout_constraintVertical_weight="2" />

    <ImageButton
        android:id="@+id/mult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/mult"
        android:scaleType="fitXY"
        android:src="@drawable/mult"
        app:layout_constraintBottom_toTopOf="@+id/add"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/num6"
        app:layout_constraintRight_toLeftOf="@+id/div"
        app:layout_constraintTop_toBottomOf="@+id/clear"
        app:layout_constraintVertical_weight="1" />

    <ImageButton
        android:id="@+id/num2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/num_2"
        android:scaleType="fitXY"
        android:src="@drawable/num2"
        app:layout_constraintBottom_toTopOf="@+id/num0"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/num1"
        app:layout_constraintRight_toLeftOf="@+id/num3"
        app:layout_constraintTop_toBottomOf="@+id/num5"
        app:layout_constraintVertical_weight="1" />

    <ImageButton
        android:id="@+id/num0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/num_0"
        android:scaleType="fitXY"
        android:src="@drawable/num0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/dot"
        app:layout_constraintTop_toBottomOf="@+id/num1"
        app:layout_constraintVertical_weight="1" />

    <ImageButton
        android:id="@+id/num1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/num_1"
        android:scaleType="fitXY"
        android:src="@drawable/num1"
        app:layout_constraintBottom_toTopOf="@+id/num0"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/num2"
        app:layout_constraintTop_toBottomOf="@+id/num4"
        app:layout_constraintVertical_weight="1" />

    <ImageButton
        android:id="@+id/num3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/num_3"
        android:scaleType="fitXY"
        android:src="@drawable/num3"
        app:layout_constraintBottom_toTopOf="@+id/dot"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/num2"
        app:layout_constraintRight_toLeftOf="@+id/add"
        app:layout_constraintTop_toBottomOf="@+id/num6"
        app:layout_constraintVertical_weight="1" />


    <ImageButton
        android:id="@+id/sub"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/sub"
        android:scaleType="fitXY"
        android:src="@drawable/sub"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/dot"
        app:layout_constraintRight_toLeftOf="@+id/equal"
        app:layout_constraintTop_toBottomOf="@+id/add"
        app:layout_constraintVertical_weight="1" />


    <TextView
        android:id="@+id/answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginStart="@dimen/margin"
        android:ems="10"
        android:gravity="end|center"
        android:text="@string/Answer"
        android:textSize="@dimen/land_answer_text_size"
        app:layout_constraintBottom_toTopOf="@+id/under"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/equal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/under"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginStart="@dimen/margin"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/equal"
        app:layout_constraintTop_toBottomOf="@+id/answer" />

</android.support.constraint.ConstraintLayout>